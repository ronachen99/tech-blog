<div class='col-md-6'>
  <h2 class="subtitle">log in</h2>
  <!-- Form for user login -->
  <form class='form login-form'>
    <div class='field'>
      <label for='username-login' class='form-label label'>username</label>
      <div class='control'>
        <!-- Input field for the username -->
        <input type='text' class='input form-control is-link' id='username-login' placeholder='bbqchickenpizza' />
      </div>
    </div>
    <div class='field'>
      <label for='password-login' class='form-label label'>password</label>
      <div class='control'>
        <!-- Input field for the password -->
        <input type='password' class='form-control input is-link' id='password-login'
          placeholder="we don't know ur pw so gl" />
      </div>
    </div>
    <div class='buttons is-right'>
      <!-- If the user is new, this button redirects them to the signup page -->
      <a href='/signup' class='button is-rounded is-outlined is-link' id='btnhover' role='button'>TAKE ME TO SIGN UP</a>
      <!-- Button to submit the login form -->
      <button type='submit' class='button is-rounded is-link'>LOG IN</button>
    </div>
  </form>
  <div class='notification-container'></div>
</div>

<!-- Script file for handling login functionality -->
<script src='/js/login.js'></script>